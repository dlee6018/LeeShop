{
  "name": "LeeShop",
  "version": "1.0.0",
  "description": "MERN shopping cart app",
  "main": "server.js",
  "scripts": {
    "start": "npm run build-typecheck && node ./backend/server.js",
    "server": "nodemon backend/server.ts",
    "postinstall": "tsc",
    "test": "NODE_OPTIONS=--experimental-vm-modules jest",
    "client": "npm start --prefix frontend",
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "data:import": "ts-node backend/seeder",
    "data:destroy": "ts-node backend/seeder -d",
    "heroku-postbuild": "NPM_CONFIG_PRODUCTION=false npm install --prefix frontend && npm run build --prefix frontend",
    "clean": "rimraf dist",
    "compile": "cross-env-shell babel src -d dist --source-maps --extensions '.ts'",
    "build": "tsc",
    "typecheck": "tsc --p .",
    "build-typecheck": "npm run typecheck && npm run build",
    "deploy":"git add . && git commit -m Heroku && git push heroku master",
    "engines": { "node": "12.22.1" }
  },
  "author": "David Lee",
  "license": "MIT",
  "dependencies": {
    "@reduxjs/toolkit": "^1.8.5",
    "@types/express": "^4.17.13",
    "axios": "^0.27.2",
    "bcryptjs": "^2.4.3",
    "colors": "^1.4.0",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "express-async-handler": "^1.1.4",
    "jsonwebtoken": "^8.5.1",
    "mongoose": "^5.10.6",
    "morgan": "^1.10.0",
    "multer": "^1.4.2",
    "react-redux": "^8.0.2",
    "rimraf": "^3.0.2"
  },
  "devDependencies": {
    "@babel/preset-env": "^7.19.3",
    "@shelf/jest-mongodb": "^4.0.0",
    "@types/bcryptjs": "^2.4.2",
    "@types/concurrently": "^7.0.0",
    "@types/jsonwebtoken": "^8.5.9",
    "@types/morgan": "^1.9.3",
    "@types/multer": "^1.4.7",
    "@types/node": "^18.6.5",
    "babel-jest": "^28.1.3",
    "concurrently": "^5.3.0",
    "cross-env": "^7.0.3",
    "jest": "^28.1.3",
    "nodemon": "^2.0.19",
    "supertest": "^6.2.4",
    "ts-node": "^10.9.1",
    "typescript": "^4.8.4"
  }
}
